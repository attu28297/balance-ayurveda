<div class="regims-combo-pd">
  <div class="pd-slider-top-heading text-center text-box">
    <h3>{{ section.settings.heading }}</h3>
  </div>
  {% if section.blocks.size > 0 %} 
    <div class="secheader-grp">
      <ul class="pd-tab-list tabs-scroll-slider">
        {% for block in section.blocks %} 
        {% if block.settings.title != blank %}
        <li class="talink" data-tab="tab-{{ block.id }}"><a href="javascript:;">{{ block.settings.title }}</a></li>
        {% endif %}
        {% endfor %}
      </ul>
   </div>
  <div class="mostlovedPd-container"> 
    <div class="container">
      <div class="tabscontentblock">
        {% for block in section.blocks %}
        {%- assign collection = collections[block.settings.collection] -%}   
        {%- assign grid_item_width = ' ' -%}
        <div id="tab-{{ block.id }}" class="tab-content" style="display: none;">
          <div class="mostloved-items prdctlisting-items grid grid--uniform grid--view-items" id="ba-product-slider">
            {% for product in collection.products limit: 6 %}
            {%- render 'product-grid-item', product: product, grid_block_size: grid_block_size, grid_block_size_mobile: grid_block_size_mobile, index: forloop.index -%}
            {% endfor %}
          </div>
        </div>
        {% endfor %}
        <div class="nav_featured"></div>
      </div>
      {% endif %}
    </div>
  </div>
</div>
