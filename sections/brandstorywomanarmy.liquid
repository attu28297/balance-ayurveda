<div class="brandstorywomanarmysec whyusbastepssec"  style="padding-bottom: 0px;">
  <div class="container">
    <div class="text-box howtousecntnt text-center">
      <h2><span class="smhead">{{ section.settings.subtitle }}</span>{{ section.settings.mainheading }}</h2>
      {{ section.settings.content }}
    </div>
    {% comment %}
    <div class="brandstorywomanarmyimg">
      <video preload="auto" autoplay="" playsinline="" muted="" loop="" width="100%">
        <source src="https://cdn.shopify.com/s/files/1/0578/5078/9945/files/Storyline_GIF.mp4?v=1649767970" type="video/mp4">
      </video> 
    </div>
    <div class="text-box morecontent howtousecntnt text-center">
      {{ section.settings.morecontent }}
      <div class="vector"><img src="https://cdn.shopify.com/s/files/1/0578/5078/9945/files/vector-1.png?v=1646738382" alt="Vector" /></div>
