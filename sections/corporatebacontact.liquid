{% schema %}
  {
    "name": "Corporate BA",
    "settings": [	
      {
        "type": "text",
        "id": "subtitle",
        "label": "Sub Heading",
        "default": "Corporate"
      },	
      {
        "type": "text",
        "id": "mainheading",
        "label": "Heading",
        "default": "Balance Ayurveda"
      },	
      {
        "type": "text",
        "id": "content",
        "label": "Content",
        "default": "At Balance ayurveda, we take pride in our team of skilled and dedicated Ayurvedic products who are driven by a passion to bring healing and well-being to thousands of patients."
      },	
      {
        "type": "text",
        "id": "email",
        "label": "email",
        "default": "Support@balanceayurved.com"
      },	
      {
        "type": "text",
        "id": "phone",
        "label": "phone",
        "default": "0129-4189111, 4040404"
      },	
      {
        "type": "text",
        "id": "address",
        "label": "Address",
        "default": "97, First Floor, New Anaj Mandi, Ballabhgarh,Faridabad, Haryana 121004"
      },                  
      {
        "id": "image",
        "type": "image_picker",
        "label": "Image"
      }
	]
  }
{% endschema %}

