      {%- if section.blocks.size > 0 -%}
      <div class="footer__blocks">
        <div class="flex-box footersight">

        {%- for block in section.blocks -%}
        {%- assign mobile_hide_block = block.settings.mobile_hide_block -%}

        {%- case block.type -%}
