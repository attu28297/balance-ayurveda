                  {%- if title1 != blank -%}
                  <p class="footer__block__title">{{ title1 }}</p>
                  {%- endif -%}

                  {%- if menu1 != blank -%}
                  <ul>
                    {%- for link in linklists[menu1].links -%}
                    <li class="footer__block__menu-link">
                      <a href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                    {%- endfor -%}
                  </ul>
                  {%- endif -%}
                </div>
                {%- endif -%}
              </div>
            </div>
            `</div>
          <div class="col-20">
            <div class="menmusupport">
              {%- when 'menu2' -%}
