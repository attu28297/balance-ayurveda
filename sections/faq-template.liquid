{% comment %} FAQ Template {% endcomment %}

<section data-section-id="{{ section.id }}" data-section-type="faq-template">
	<div class="container">
		{%- unless section.settings.hide_title -%}
		<div class="page-title">
			<h1>{{ page.title }}</h1>
		</div>
		{%- endunless -%}

		{%- unless page.content == blank -%}
		<div class="page-content">
			<div class="text-content rte">
				{{- page.content -}}
			</div>
		</div>
		{%- endunless -%}
	</div>

	{%- render 'faq', is_faq_template: true -%}
</section>

{% schema %}
{
	"name": "FAQ",
	"settings": [
		{
			"type": "checkbox",
			"id": "hide_title",
			"label": "Hide page title",
			"default": false
		},
		{
			"type": "text",
			"id": "title",
			"label": "Heading"
		},
		{
			"type": "text",
			"id": "subheading",
			"label": "Subheading"
		}
	],
	"blocks": [
		{
			"name": "Item",
			"type": "item",
			"settings": [
				{
					"type": "text",
					"id": "title",
					"label": "Question",
					"default": "Question"
				},
				{
					"type": "richtext",
					"id": "answer",
					"label": "Answer",
					"default": "<p>Use this answer block to discuss some commonly asked questions you've discovered from your customers interactions. You could discuss product details, size fit, shipping policies, or anything you think would help merchants make an informed decision about your product or collection. This section will appear across all products.</p>"
				}
			]
		}
	]
}
{% endschema %}