<section class="brandstorybanner innrbanner" style="background-color: #FCF4EA;">
    <div class="container">
        <div class="innrbannercntnt">
            <div class="bannercntnt">
                {% assign beatles = page.metafields.custom.top_banner_headings | split: ", " %}
                <h1><span class="smhead">   {{ beatles[0] }}</span>    {{ beatles[1] }}</h1>
             
           
            </div>
        </div>
    </div>
                {% assign beatlesimage = page.metafields.custom.top_background_image_url | split: ", " %}
  
  <div class="desktopbanner hide-500" style="background-image: url('{{ beatlesimage[0] }}')"></div>
  <div class="desktopbanner show-500" style="background-image: url('{{ beatlesimage[1] }}');"></div>
</section> 
{% schema %}
  {
    "name": "Banner",
    "settings": [	
      {
        "type": "text",
        "id": "subtitle",
        "label": "Sub Heading",
        "default": "Why Us?"
      },	
      {
        "type": "text",
        "id": "mainheading",
        "label": "Heading",
        "default": "Our Philosophy"
      },                  
      {
        "id": "desktopimage",
        "type": "image_picker",
        "label": "Desktop Banner"
      },                  
      {
        "id": "mobileimage",
        "type": "image_picker",
        "label": "Mobile Banner"
      }
    ]
  }
{% endschema %}

