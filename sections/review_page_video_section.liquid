
<div class="hpvideosec">
  <div class="container">
       <div class="availableplatform">
      <ul>        
        {%- assign brandlogo = section.settings.brandurl -%}
        {%- assign brandlogo2 = section.settings.brandurl2 -%}        
        {%- assign brandlogo3 = section.settings.brandurl3 -%}
        {%- assign brandlogo4 = section.settings.brandurl4 -%}        
        {%- assign brandlogo5 = section.settings.brandurl5 -%}
        {%- assign brandlogo6 = section.settings.brandurl6 -%}
        <li><span class="availblrheading">{{ section.settings.availbletext }}</span></li>
        {% if section.settings.brandlogo != blank %}<li><a href="{{ brandlogo }}"><img src="{{ section.settings.brandlogo | img_url: 'master' }}" alt="brand logo"/></a></li>{%- endif -%}
        {% if section.settings.brandlogo2 != blank %}<li><a href="{{ brandlogo2 }}"><img src="{{ section.settings.brandlogo2 | img_url: 'master' }}" alt="brand logo"/></a></li>{%- endif -%}
        {% if section.settings.brandlogo3 != blank %}<li><a href="{{ brandlogo3 }}"><img src="{{ section.settings.brandlogo3 | img_url: 'master' }}" alt="brand logo"/></a></li>{%- endif -%}
        {% if section.settings.brandlogo4 != blank %}<li><a href="{{ brandlogo4 }}"><img src="{{ section.settings.brandlogo4 | img_url: 'master' }}" alt="brand logo"/></a></li>{%- endif -%}
        {% if section.settings.brandlogo5 != blank %}<li><a href="{{ brandlogo5 }}"><img src="{{ section.settings.brandlogo5 | img_url: 'master' }}" alt="brand logo"/></a></li>{%- endif -%}
        {% if section.settings.brandlogo6 != blank %}<li><a href="{{ brandlogo6 }}"><img src="{{ section.settings.brandlogo6 | img_url: 'master' }}" alt="brand logo"/></a></li>{%- endif -%}
      </ul>
    </div>
    <div class="headingBox text-box common-heading-color">
      <h2>{{ section.settings.heading }}</h2>          
    </div>
    
      
    <ul class="sec-row">

      {% for block in section.blocks %}
      <li>
        <div class="videobox">
          <div class="videoboxinnr">
            <div class="video_review"> 

              <video class="video-for" width="100%" height="100%" controls="" autoplay="" muted="" loop="" style="object-fit: cover;width:100%;">
                <source src="{{ block.settings.video_url }}" type="video/mp4">
                <source src="{{ block.settings.video_url }}" type="video/webm">
              </video>
            </div>
            <div class="videoboxcntnt">
              {{ block.settings.video_title }}
            </div>
          </div>
        </div>
      </li>
      {% endfor %}
    </ul>
 
  </div>
</div>
